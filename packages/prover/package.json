{
  "name": "@zecrep/prover",
  "version": "0.1.0",
  "private": true,
  "description": "Local ZecRep proof pipeline CLI (scan → range proof → FHE encryption).",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm,cjs --dts --sourcemap --out-dir dist",
    "lint": "biome lint ./src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "noir:build": "cd noir && nargo compile"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.1",
    "@grpc/proto-loader": "^0.8.0",
    "argon2-browser": "^1.18.0",
    "commander": "^12.1.0",
    "pino": "^9.5.0",
    "undici": "^6.20.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}

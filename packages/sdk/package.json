{
  "name": "@zecrep/sdk",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript SDK for ZecRep - wallet integration, proof generation, and contract interactions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --sourcemap --out-dir dist",
    "dev": "tsup src/index.ts --format esm --watch --dts --sourcemap --out-dir dist",
    "lint": "biome lint ./src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "react": "^19.2.0",
    "viem": "^2.0.0",
    "wagmi": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}

